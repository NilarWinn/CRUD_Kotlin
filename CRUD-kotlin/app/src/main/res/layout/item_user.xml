<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardMargin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cardPadding">

        <TextView
            android:id="@+id/lbl_user_name"
            style="@style/CardView.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginSmall"
            app:layout_constraintEnd_toStartOf="@+id/img_more_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names" />

        <ImageView
            android:id="@+id/img_more_options"
            android:layout_width="@dimen/imgSizeXSmall"
            android:layout_height="@dimen/imgSizeXSmall"
            android:contentDescription="@string/action_open_menu"
            android:src="@drawable/ic_more_options"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="@dimen/cardImgMargin"
            android:layout_height="@dimen/cardImgMargin"
            android:layout_marginTop="@dimen/marginSmall"
            android:contentDescription="@string/title_email"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_user_name" />

        <TextView
            android:id="@+id/lbl_email"
            style="@style/CardView.Text.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSmall"
            app:layout_constraintBottom_toBottomOf="@+id/img_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_email"
            app:layout_constraintTop_toTopOf="@+id/img_email"
            tools:text="@string/title_email" />

        <ImageView
            android:src="@drawable/ic_phone"
            android:id="@+id/img_phone"
            android:layout_width="@dimen/cardImgMargin"
            android:layout_height="@dimen/cardImgMargin"
            android:layout_marginTop="@dimen/marginSmall"
            android:contentDescription="@string/title_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_email" />

        <TextView
            android:id="@+id/lbl_phone"
            style="@style/CardView.Text.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSmall"
            app:layout_constraintBottom_toBottomOf="@+id/img_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_phone"
            app:layout_constraintTop_toTopOf="@+id/img_phone"
            tools:text="@tools:sample/us_phones" />

        <ImageView
            android:id="@+id/img_dob"
            android:layout_width="@dimen/cardImgMargin"
            android:layout_height="@dimen/cardImgMargin"
            android:layout_marginTop="@dimen/marginSmall"
            android:contentDescription="@string/title_dob"
            android:src="@drawable/ic_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_phone" />

        <TextView
            android:id="@+id/lbl_dob"
            style="@style/CardView.Text.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSmall"
            app:layout_constraintBottom_toBottomOf="@+id/img_dob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_dob"
            app:layout_constraintTop_toTopOf="@+id/img_dob"
            tools:text="@tools:sample/date/ddmmyy" />

        <ImageView
            android:id="@+id/img_address"
            android:layout_width="@dimen/cardImgMargin"
            android:layout_height="@dimen/cardImgMargin"
            android:layout_marginTop="@dimen/marginSmall"
            android:contentDescription="@string/title_address"
            android:src="@drawable/ic_map_solid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_dob" />

        <TextView
            android:id="@+id/lbl_address"
            style="@style/CardView.Text.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSmall"
            app:layout_constraintBottom_toBottomOf="@+id/img_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_address"
            app:layout_constraintTop_toTopOf="@+id/img_address"
            tools:text="@tools:sample/cities" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>